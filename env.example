# Database Configuration
DATABASE_URL=sqlite:///./threatforge.db
POSTGRES_URL=postgresql://user:password@localhost/threatforge

# JWT Configuration
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Auth0 Configuration (if using Auth0)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=your-api-identifier

# AWS S3 Configuration (for PDF storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=threatforge-reports

# Security Tools Configuration
TOOLS_DIRECTORY=./security_tools

# AI/ML Configuration
GROQ_API_KEY=your-groq-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL_PROVIDER=groq  # groq, openai, or local
AI_FALLBACK_ENABLED=true
AI_COST_LIMIT_PER_JOB=0.01  # Maximum cost per job in USD
AI_MODEL_NAME=llama3-8b-8192  # Default Groq model
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.1 